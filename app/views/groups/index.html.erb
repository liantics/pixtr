
<h2>My Groups</h2>
<ul>
	<% @my_groups.each do |group| %>
		<% if current_user.member?(group)%>
			<p><li class="roomy">
				<%= render group %></li></p>
		<% end %>
<% end %>

</ul>

<h2>All Groups</h2>
<ul>
<% @groups.each do |group| %>

<p><li class="roomy"><%= render group %></li>

	<!-- [group, @group_membership] array adds the group id to the url, makes the path group/group:id/group_memberships-->

	<%= form_for [group, @group_membership] do |form| %> 

		<% if !current_user.member?(group)%>
			<%= form.submit "Join this group" %>
		<% end %>
	<% end %>
</li></p>
<% end %>
</ul>

