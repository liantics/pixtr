<h2>Edit a Gallery</h2>


	<%= form_for @gallery, url: "/galleries/#{@gallery.id}" do |f| %>
		<div> 
		  <%= f.label :name %>:
		  <%= f.text_field :name %><br />
		</div>

		<div>
		  <%= f.label :description %>:
		  <%= f.text_area :description %><br />
		</div>

		<div>
		  <%= f.submit %>
		</div>
	
<% end %>