<!-- form to edit and create a gallery -->


<%= form_for @gallery do |f| %>

	<%= render "error_messages", target: @gallery  %>

	<div> 
	  <%= f.label :name %>
	  <%= f.text_field :name %><br />
	</div>

	<div>
	  <%= f.label :description %>
	  <%= f.text_area :description %><br />
	</div>

	<div>
	  <%= f.submit "submit" %>
	</div>
	
<% end %>